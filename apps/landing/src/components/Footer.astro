---
import type { Messages } from "../i18n";

interface Props {
	t: Messages["footer"];
}
const { t } = Astro.props;

const year = new Date().getFullYear();
---

<footer class="py-12 px-6 bg-surface-raised border-t border-border-subtle">
	<div class="max-w-4xl mx-auto text-center">
		<p class="font-pixel text-xs text-text-primary mb-6">
			Claw<span class="text-coral">Trainer</span><span class="text-cyan">.ai</span>
		</p>
		<p class="font-mono text-xs text-text-secondary mb-6">
			{t.hackathon} {year}
		</p>

		<div class="flex justify-center gap-6 mb-8">
			<a
				href="#"
				class="font-mono text-xs text-text-muted hover:text-cyan transition-colors duration-200"
			>
				{t.dapp}
			</a>
			<a
				href="https://github.com"
				target="_blank"
				rel="noopener noreferrer"
				class="font-mono text-xs text-text-muted hover:text-cyan transition-colors duration-200"
			>
				GitHub
			</a>
			<a
				href="https://testnet.bscscan.com"
				target="_blank"
				rel="noopener noreferrer"
				class="font-mono text-xs text-text-muted hover:text-cyan transition-colors duration-200"
			>
				BNBScan
			</a>
		</div>

		<p class="font-mono text-xs text-text-muted">
			{t.builtWith} <span class="text-coral">&lt;3</span> {t.onBnb}
		</p>
	</div>
</footer>
