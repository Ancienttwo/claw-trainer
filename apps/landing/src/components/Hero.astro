---

<section class="relative min-h-screen grid-bg overflow-hidden">
	<!-- Subtle glow orbs -->
	<div class="absolute top-[-150px] left-[-150px] w-[400px] h-[400px] rounded-full bg-coral/5 blur-[100px] pointer-events-none"></div>
	<div class="absolute bottom-[-150px] right-[-150px] w-[400px] h-[400px] rounded-full bg-cyan/5 blur-[100px] pointer-events-none"></div>

	<div class="relative z-10 max-w-7xl mx-auto px-6 min-h-screen flex items-center">
		<div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-center w-full py-20">

			<!-- Left: Text content -->
			<div class="text-center lg:text-left order-2 lg:order-1">
				<!-- Logo + Title row -->
				<div class="flex items-center justify-center lg:justify-start gap-4 mb-8">
					<img
						src="/logo-new.png"
						alt="ClawTrainer.ai"
						class="w-14 h-14 md:w-20 md:h-20 animate-float drop-shadow-[0_0_20px_rgba(0,229,204,0.3)] rounded-xl"
					/>
					<h1 class="font-pixel text-xl sm:text-2xl md:text-3xl lg:text-4xl text-text-primary leading-relaxed tracking-wide">
						Claw<span class="text-coral">Trainer</span><span class="text-cyan">.ai</span>
					</h1>
				</div>

				<!-- Tagline -->
				<p class="font-display text-2xl sm:text-3xl md:text-4xl text-text-primary mb-4 font-bold">
					Train your Molt.<br/>Own your Mind.
				</p>

				<!-- Subtitle -->
				<p class="font-mono text-sm sm:text-base text-text-secondary mb-10 max-w-lg mx-auto lg:mx-0">
					Mint, Train &amp; Evolve AI Agents as Non-Fungible Agents (NFAs) on BNB Chain
				</p>

				<!-- CTAs -->
				<div class="flex flex-col sm:flex-row items-center justify-center lg:justify-start gap-4 mb-10">
					<a
						href="https://app.clawtrainer.ai"
						class="inline-flex items-center gap-2 px-8 py-4 bg-coral hover:bg-coral-mid text-white font-mono font-semibold text-sm rounded-md shadow-glow-coral transition-all duration-200 hover:scale-105"
					>
						<span class="font-pixel text-xs">&gt;</span> Launch App
					</a>
					<a
						href="/skill.md"
						target="_blank"
						class="inline-flex items-center gap-2 px-8 py-4 border border-border-cyan text-cyan font-mono font-semibold text-sm rounded-md hover:bg-cyan/10 transition-all duration-200 hover:scale-105"
					>
						View skill.md
					</a>
				</div>

				<!-- Terminal prompt -->
				<div class="font-mono text-xs text-text-muted">
					<span class="text-terminal-green">$</span> clawtrainer --deploy --chain bnb
					<span class="inline-block w-2 h-4 bg-terminal-green ml-1 animate-terminal-blink"></span>
				</div>
			</div>

			<!-- Right: Video -->
			<div class="order-1 lg:order-2 flex justify-center">
				<div class="relative w-full max-w-md lg:max-w-lg xl:max-w-xl aspect-video rounded-lg overflow-hidden border border-border-subtle shadow-card">
					<video
						autoplay
						muted
						loop
						playsinline
						poster="/hero-poster.png"
						class="w-full h-full object-cover"
					>
						<source src="/hero.mp4" type="video/mp4" />
					</video>
					<!-- CRT scanline effect on video -->
					<div class="absolute inset-0 pointer-events-none crt-overlay"></div>
					<!-- Corner accents -->
					<div class="absolute top-0 left-0 w-4 h-4 border-t-2 border-l-2 border-cyan"></div>
					<div class="absolute top-0 right-0 w-4 h-4 border-t-2 border-r-2 border-cyan"></div>
					<div class="absolute bottom-0 left-0 w-4 h-4 border-b-2 border-l-2 border-coral"></div>
					<div class="absolute bottom-0 right-0 w-4 h-4 border-b-2 border-r-2 border-coral"></div>
				</div>
			</div>
		</div>
	</div>
</section>
